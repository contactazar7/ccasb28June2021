<aura:component controller="Mark_Attendance_ros" implements="force:appHostable,lightning:isUrlAddressable" access="global">
    <aura:html tag="style">
        .slds-template__container
        {
        background-color: #FAFAF9;
        border-radius: 35px;
        }
    </aura:html>
    <aura:attribute name="id" type="String" />
    <lightning:navigation aura:id="nService" />
    <aura:attribute name="Message" type="boolean" default="false" description="use for store and display attendance list return from server"/>
    <aura:attribute name="TotalNumberOfRecord" type="integer" default="0" description="use for display Number of records"/>
    <aura:attribute name="data" type="Object" />
    <aura:attribute name="columns" type="List" />
    <aura:attribute name="isLoading" type="Boolean" default="false"/>
    <aura:handler name="init" value="{!this}" action="{!c.onPageReferenceChange}"/>
    <aura:handler name="dataTableSaveEvent" event="c:dataTableSaveEvent" action="{!c.saveTableRecords}"/>
    <aura:handler name="dataTableSaveEvent" event="c:dataTableSaveEvent" action="{!c.handleRecordSelectEvent}"/>
    <aura:attribute name="selectedRecords" type="List" />
    <aura:attribute name="classId" type="string" />
    <aura:attribute name="pageState" type="string" />
    
    <div class="slds-template__container">
        <lightning:spinner variant="brand" size="large" aura:id="Id_spinner" class="slds-hide" />
        <div class="slds-m-around_medium" style="font-family:verdana;courier">
            <div>
                <h1 style="text-align:center;font-stretch:expanded;font-family:Monospace;font-size:30px;">ROSTER ATTENDANCE REGISTER</h1>
            </div>
        </div>
        <div style="margin-left:100px;">
            <lightning:layout >
                <lightning:layoutItem size="4" padding="around-large" flexibility="auto">
                    <P style="margin-left:15px;"><b>Count of Records : <lightning:badge label="{!v.TotalNumberOfRecord}"/></b></P>
                </lightning:layoutItem>
                <lightning:layoutItem size="8" padding="around-large" flexibility="auto"> 
                    <p style="text-align:right;">
                        <lightning:button onclick="{!c.viewRoster}" variant="brand"
                                                                    class="slds-button slds-button_brand"
                                                                    label="Back to Class View Roster"
                                                                    />
                        <lightning:button onclick="{!c.navigate}" variant="brand"
                                                                  class="slds-button slds-button_brand"
                                                                  label="Back to Roster Record"
                                                                    />
                        <aura:if isTrue="{!!empty(v.selectedRecords)}">
                            <lightning:buttonMenu alternativeText="Show more" onselect="{!c.handleSelect}" menuAlignment="right">
                                <lightning:menuItem value="markaspresent" label="Mark as Present"/>
                                <lightning:menuItem value="markasabsent" label="Mark as Absent" />
                            </lightning:buttonMenu>
                        </aura:if>
                    </p>
                </lightning:layoutItem> 
            </lightning:layout>
        </div>
        <aura:if isTrue="{!v.data.length>0}">
            <c:RosterAttendance_search aura:id="datatableId" auraId="datatableId" columns="{!v.columns}" data="{!v.data}" showRowNumberColumn="true" />
        </aura:if>  
        <aura:if isTrue="{!v.isLoading}">
            <lightning:spinner alternativeText="Loading.." variant="brand"/>
        </aura:if> 
    </div>
</aura:component>