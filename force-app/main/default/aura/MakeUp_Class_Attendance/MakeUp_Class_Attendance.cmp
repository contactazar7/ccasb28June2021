<aura:component controller="search_roster_absentees" implements="force:appHostable,lightning:isUrlAddressable" access="global" >
    <aura:html tag="style">
        .slds-template__container
        {
        background-color:#FFFFFF;
        <!--background-color: #FAFAF9; -->
        border-radius: 35px;
        }
    </aura:html>
    <aura:attribute name="id" type="String" />
    <lightning:navigation aura:id="viewRosterService" />
    <aura:handler name="init" value="{!this}" action="{!c.onPageReferenceChange}"/>
    <aura:handler name="change" value="{!v.pageReference}" action="{!c.onPageReferenceChange}"/>
    <aura:attribute name="Message" type="boolean" default="false" description="use for store and display attendance list return from server"/>
    <aura:attribute name="TotalNumberOfRecord" type="integer" default="0" description="use for display Number of records"/>
    <aura:attribute name="attendancerecords" type="List"/>
    <aura:attribute name="selectrecords" type="boolean" default="false"/> 
    <aura:attribute name="classId" type="string" />
    <aura:attribute name="pageState" type="string" />
    <aura:attribute name="searchResult" type="Object"/>
    <aura:attribute name="cloneResult" type="Object" />
    <aura:attribute name="contactrows" type="List"/>
    <aura:attribute name="selectedRowsCount" type="Integer" default="0"/>
    <aura:attribute name="rowsToupdate" type="Object" />

    
    <div class="slds-template__container">
        <lightning:spinner variant="brand" size="large" aura:id="Id_spinner" class="slds-hide" />
        <div class="slds-m-around_medium" style="font-family:verdana;courier">
            <div>
                <h1 style="text-align:center;font-stretch:expanded;font-family:Monospace;font-size:30px;">CREATE MAKE-UP ATTENDANCE</h1>
            </div>
        </div>
        <div style="margin-left:100px;padding-bottom:10px;"> 
            <P style="text-align: left;padding: 10px;">
                <span style="float:left;">
                    <b>Total Number of Records : <lightning:badge label="{!v.TotalNumberOfRecord}"/></b><br/>
                    <b>Selected Records: <lightning:badge label="{!v.selectedRowsCount }"/></b>
                </span>
                </P>
            <lightning:layout>
                <lightning:layoutItem size="12" padding="around-small">
                    <div style="text-align: right;">
                        <lightning:button label="Create Attendance" class="slds-button_brand" 
                                          onclick="{!c.chooseSelectedattendance}"
                                          disabled="{!v.selectedRowsCount == 0}"
                                          />
                        <lightning:button onclick="{!c.viewRoster}" variant="brand"
                                          class="slds-button slds-button_brand"
                                          label="Go-To Class View Roster"
                                          />
                        <lightning:button onclick="{!c.navigate}"
                                          variant="brand"
                                          class="slds-button slds-button_brand"
                                          label="Go-To Roster Class"
                                          /> 
                    </div> 
                </lightning:layoutItem> 
            </lightning:layout>
        </div>
        <div class="container" style="padding-top:50px;">
            <div > 
                <lightning:datatable class="slds-table" data="{!v.searchResult}" columns="{!v.contactrows}" keyField="Id" onrowselection="{!c.updateSelectedRecs}" showRowNumberColumn="false"/>
            </div>
        </div>
        <aura:if isTrue="{!v.Message}">
            <div class="slds-notify_container slds-is-relative">
                <div class="slds-notify slds-notify_toast slds-theme_error" role="alert">
                    <span class="slds-assistive-text">error</span>
                    <div class="slds-notify__content slds-align_absolute-center">
                        <h5 class="slds-text-heading_small"><b>No Records Found!</b></h5>
                    </div>
                </div>
            </div> 
        </aura:if>  
    </div>
</aura:component>